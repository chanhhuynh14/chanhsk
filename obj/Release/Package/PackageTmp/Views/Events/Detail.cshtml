<script>
    var url = window.location.href;
    var id = url.substring(url.lastIndexOf('/') + 1);
    $.ajax({
        type: 'GET',
        url: 'http://localhost:60976/api/Admin/GetDetail/' + id,
        success: function (data) {
            $('.top-title').append(data.Name);
            $('#contentID').append(data.Content);
            $('#DesciptionID').append(data.Desciption);
            $('#hinhanh').append('<img src=' + data.Image1 + '>');
            $('#KeywordEventID').append(data.Keyword);
            $('#SeoTitleEventID').val(data.SeoTitle);
            $('#Id_CateEventID').val(data.Id_Cate);
            $('#SL_ThamgiaEventID').val(data.SL_Thamgia);
            $('.date').append(data.Date);
            $('#EventID').val(data.Id);
            $("#single-blog-details.sec-spacer").modal("show");
            console.log(data);
        },
        error: function (error) {
            alert(error);
        }
    })

</script>


