
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}



<div class="form">
    <h1>ĐĂNG NHẬP HỆ THỐNG</h1>
    <div class="form-content">
        <form action="/Admin/ShowAdmin/Login" method="post">
            //Ghi nhớ
            <div class="form-info">
                <h2>Login</h2>
            </div>
            <div class="email-w3l">
                <span class="i1"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                <input class="email" type="text" name="UserName" placeholder="Tên đăng nhập" required="">
            </div>
            <div class="pass-w3l">
                <!---728x90--->
                <span class="i2"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                <input class="pass" type="password" name="Password" placeholder="Mật khẩu" required="">
            </div>
            <div class="form-check">
                <div class="left">
                    <input type="checkbox" value="Remember me">Nhớ tôi
                </div>
                <div class="right">
                    <a href="#">Quên mật khẩu?</a>
                </div>
                <div class="clear"></div>
            </div>
            <div class="submit-agileits">
                <input class="login" type="submit" value="ĐĂNG NHẬP">
            </div>
        </form>
    </div>
</div>




